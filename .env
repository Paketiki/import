# Базовые настройки
PROJECT_NAME=KinoVzor
APP_NAME=KinoVzor API
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this

# База данных
DATABASE_URL=sqlite:///movies.db

SQLALCHEMY_DATABASE_URL = "postgresql+asyncpg://user:password@localhost/dbname"
# API
API_V1_PREFIX=/api/v1

# CORS и хосты
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000
FRONTEND_URL=http://localhost:3000

# Пользователи
DEFAULT_ADMIN_ID=1
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@moviedb.com
SYSTEM_USER_ID=999

# Загрузка данных
LOAD_MOVIES_ON_STARTUP=False
MOVIES_JS_FILE_PATH=app/static/js/script.js
DEFAULT_CREATED_BY_USER_ID=1

# Логирование
LOG_LEVEL=INFO
LOG_FILE=app.log

# Аутентификация
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Файлы
UPLOAD_DIR=uploads

# Сервер
HOST=0.0.0.0
PORT=8000

CORS_ORIGINS=1